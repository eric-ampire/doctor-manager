<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Mot de passe"
            android:id="@+id/edPasswordLayout"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            app:boxStrokeWidth="1dp"
            android:layout_width="250dp"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Confirmation"
            android:id="@+id/edPasswordConfirmationLayout"
            app:counterEnabled="true"
            app:counterMaxLength="5"
            app:boxStrokeWidth="1dp"
            android:layout_width="250dp"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edConfirmation"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_graduant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/previewToAdresse"
            app:srcCompat="@drawable/ic_navigate_before_black_24dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Precedant"
            android:layout_weight="5"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <View
            android:layout_margin="5dp"
            android:background="#fff"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/createAccountButton"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="#00ffffff"
            android:layout_weight="5"
            android:text="Suivant"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>