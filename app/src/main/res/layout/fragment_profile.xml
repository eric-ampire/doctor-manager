<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.home.fragment.ProfileFragment">

    <LinearLayout
        android:id="@+id/layoutProfile"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#aaa"
            app:civ_border_width="0.5dp"
            android:src="@drawable/bg_user_placeholder"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="1"
                android:id="@+id/edNomProfile"
                android:hint="Nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/edPostNomProfile"
                android:hint="Post nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:enabled="false"
                android:layout_weight="2"
                android:id="@+id/edPrenomProfile"
                android:hint="Prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="8"
                android:id="@+id/edGenreProfile"
                android:hint="Genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/edAdresseProfile"
            android:hint="Adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/edNumeroProfile"
            android:hint="Numero de contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>