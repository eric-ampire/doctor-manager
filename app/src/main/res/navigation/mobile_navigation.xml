<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/identityFragment">
    <fragment
        android:id="@+id/identityFragment"
        android:name="com.pbreakers.medprox.activity.authentification.fragment.IdentityFragment"
        android:label="fragment_identity"
        tools:layout="@layout/fragment_identity" >
        <action
            android:id="@+id/action_identityFragment_to_adressFragment"
            app:destination="@id/adressFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/adressFragment"
        android:name="com.pbreakers.medprox.activity.authentification.fragment.AdressFragment"
        android:label="AdressFragment" >
        <action
            android:id="@+id/action_adressFragment_to_identityFragment"
            app:destination="@id/identityFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_adressFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.pbreakers.medprox.activity.authentification.fragment.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_adressFragment"
            app:destination="@id/adressFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>
